<!DOCTYPE html>
<html>
  <head>
    <title>book_edit</title>
  </head>
  
  <body>
    <h1>Editing Book</h1>
    
    <div id="error_explanation" class="alert alert-danger">
    <% if @book.errors.any? %>
      <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
      <ul>
        <%@book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    
    <%= form_with model: @book, url:"/books/#{@book.id}", local:true do |f| %>
      <div class = "field">
        <label>Title</label>
        <%= f.text_field :title %>
      </div>
      <div class = "field">
        <label>Body</label>
        <%= f.text_area :body %>
      </div>
      <div class = "actions">
      <%= f.submit 'Update Book' %>
      </div>
    <% end %>
    
    <%= link_to 'Show', book_path, class: 'show' %>
     | 
    <%= link_to 'Back', books_path, class: 'back' %>

  </body>
</html>