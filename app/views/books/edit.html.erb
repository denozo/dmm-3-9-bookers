<!DOCTYPE html>
<html>
  <head>
    
  </head>
  
  <body>
    <%= form_with model: @book, url:"/books/#{@book.id}", local:true do |f| %>
    
      <div class = "field">
        <label>Title</label>
        <%= f.text_field :title %>
      </div>
      <div class = "field">
        <label>Body</label>
        <%= f.text_area :body %>
      </div>
      <p>
      <%= f.submit 'Update Book' %>
      </p>
      
    <% end %>
    
    <a><%= link_to 'Show', book_path %></a>
    <a><%= link_to 'Back', books_path %></a>
  </body>

</html>
