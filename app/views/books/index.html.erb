<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
  </head>

  <body>
  
    <h1>Books</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody> <!-- データを入れるテーブル-->
        <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to 'Show', book_path(book.id), class: 'show' %></td>
          <td><%= link_to 'Edit', edit_book_path(book.id),class: 'edit' %></td>
          <td><%= link_to 'Destroy', book_path(book.id), class: 'Destroy', method: :delete, "data-confirm" => "Are you sure？" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    
    <h2>New book</h2>
  
      <!-- エラーチェック部分-->
    <% if @book.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
        <ul>
          <%@book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- from_with部分-->
    <%= form_with model: @book, url:"/books", class: 'new_book', local:true do |f| %>
    
      <div class="field">
        <label for="book_title">Title</label>
        <%= f.text_field :title, class: 'book_title' %>
      </div>
      
      <div class="field">
        <label for="book_body">Body</label>
        <%= f.text_area :body, class: 'book_body' %>
      </div>
      
      <div class="actions">
      <%= f.submit 'Create Book' %>
      </div>
      
    <% end %>
    
  </body>
</html>