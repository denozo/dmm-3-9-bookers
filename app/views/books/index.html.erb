<h1>Books</h1>


<h4>New book</h4>
<!-- from_with部分-->
<%= form_with model: @book, url:'/books', local:true do |f| %>

  <div class = "field">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  <div class = "field">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>
  <p>
  <%= f.submit 'Create' %>
  </p>
  
<% end %>